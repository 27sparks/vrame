<ol class="select-options">
<% field.options.each do |option| %>
	<li>
		<label>
			<input
				<% if field.is_a? JsonObject::Types::MultiSelect %>
					type="checkbox"
					<%= 'checked="checked"' if value.is_a?(Array) && value.include?(option) %>
    				name="<%= field_name %>[]"
				<% else %>
					type="radio"
					<%= 'checked="checked"' if value == option %>
    				name="<%= field_name %>"
				<% end %>
				value="<%=h option %>">
			<%= h option %>
		</label>
	</li>
<% end %>
</ol>