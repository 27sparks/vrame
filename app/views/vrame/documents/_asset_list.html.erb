<ol class="asset-list">
<% for asset in assets %>
	<li>
		<% if asset.type == 'Image' %>
			<p class="image-wrapper" fullurl="<%= h(asset.file.url(:full)) %>" title="<%=h asset.title %>">
				<img src="<%= h(asset.file.url(:thumbnail)) %>" alt="" />
			</p>
		<% else %>
			<p><%=h asset.file.original_filename %></p>
		<% end %>
		
