<h2>Eigenschema der Kategorie</h2>

<% form_for [:vrame, @category] do |f| %>
    
    <fieldset>
        <%= render :partial => 'vrame/categories/schema_builder/schema_builder',
                   :locals  => { :schema => @category.eigenschema, :schema_attribute => 'eigenschema' } %>
    </fieldset>
    
    <ul>
        <li class="last">
            <%= f.submit 'Speichern', :class => 'submit' %> oder <%= link_to '« zurück', edit_vrame_category_path(@category) %>
        </li>
    </ul>
    
<% end %>

<%= yield :schema_builder_after_form %>