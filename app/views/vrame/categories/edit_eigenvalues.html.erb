<h2>Meta-Informationen der Kategorie</h2>

<% form_for [:vrame, @category] do |f| %>

    <fieldset>
        <% @category.eigenschema.fields.each do |field| %>
            <%= render :partial => 'vrame/shared/meta_editor/meta_field', :locals => {
                :parent => @category,
                :parent_name => 'category',
                :field => field,
                :schema_attribute => 'eigenschema'
            } %>
        <% end %>
    </fieldset>

    <ul>
        <li class="last">
            <%= f.submit 'Speichern', :class => 'submit' %> oder <%= link_to '« zurück', edit_vrame_category_path(@category) %>
        </li>
    </ul>

<% end %>